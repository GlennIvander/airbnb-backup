<div class="w-full h-12 flex items-center border-b border-gray-100 fixed top-5 bg-white">
  <div class="container px-5 w-full mx-auto flex justify-between items-center">
    <%= link_to "/", class:"text-red-600 font-bold flex items-end text-xl" do %>
      <%= image_tag "logo-nav.png", class:"w-8 object-cover" %>
      <span>Airbnb</span>
    <% end %>
    <div class="flex gap-4">
      <% if !current_user %>
        <%= link_to "Sign in", new_user_session_path, class:"font-semibold" %>
        <%= link_to "Create account", new_user_registration_path, class:"font-semibold" %>
      <% else %>
        <div class="relative">
          <div class="border-2 border-gray-100 rounded-full h-10 w-10 flex items-center justify-center">
            <i class="fa-solid fa-user"></i>
          </div>
          <div class="absolute top-16 -left-24 w-40 h-64 bg-gray-100">

          </div>
        </div>
      <% end  %>
    </div>
  </div>
</div>